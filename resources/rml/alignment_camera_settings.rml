<rml>

    <head>
        <link type="text/rcss" href="rml.rcss" />
        <link type="text/rcss" href="mikan.rcss" />
        <link type="text/template" href="window.rml" />
        <title>Video Controls</title>
        <style>
            body {
                left: 10dp;
                top: 25dp;
                width: 275dp;
                height: 100dp;

                margin: auto;
            }
        </style>
    </head>

    <body template="window">
        <div id="title_bar">
            <handle move_target="#document">
                <div id="icon"></div>
                <span id="title">Video Controls</span>
            </handle>
        </div>
        <panel id="controls" data-model="alignment_camera_settings">
            <h2>Brightness</h2>
            <div>
                <input type="range" name="brightness" min="0" max="255" step="1" value="128" data-value="brightness" />
                {{brightness}}
            </div>
            <h2>VR Frame Delay</h2>
            <div>
                <input type="range" name="vr_frame_delay" min="0" max="100" step="1" value="0" data-value="vr_frame_delay" />
                {{vr_frame_delay}}
            </div>
            <h2>Filter</h2>
            <div data-if="show_video_display_mode">
                <select id="select" name="video_display_mode" data-value="video_display_mode">
                    <option data-for="mode : video_display_modes" data-value="it_index">{{mode}}</option>
                </select>
            </div>        
        </panel>
    </body>
</rml>