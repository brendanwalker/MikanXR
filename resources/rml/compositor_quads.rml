<rml>
    <head>
        <link type="text/rcss" href="rml.rcss"/>
        <link type="text/rcss" href="mikan.rcss"/>
        <link type="text/template" href="window.rml" />
        <title>Quad Stencils</title>
        <style>
            body
            {
                left: 10dp;
                top: 20dp;
                width: 300dp;
                height: 500dp;
                margin: auto;
            }
            numeric{
                width: 50dp;
                margin-left: 0dp;
                vertical-align: -8dp;
            }            
        </style>
	</head>
	<body template="window">
        <panel id="controls" data-model="compositor_quads">
			<div class="picker">
				<div data-for="stencil : stencil_quads">
                    <input type="text" style="width: 150dp; margin-left: 0;	vertical-align: -12dp;" data-event-change="modify_stencil_name(stencil.stencil_id)" data-value="stencil.stencil_name"/>
                    <br/> 
                    <label>Quad Stencil ID: {{stencil.stencil_id}}</label>
                    <br/>
                    <div data-if="spatial_anchors.size > 0">
                        <select id="select" name="parent_anchor_id" data-value="stencil.parent_anchor_id">
                            <option data-for="spatial_anchor_id : spatial_anchors" data-value="spatial_anchor_id">{{spatial_anchor_id | to_anchor_name}}</option>
                        </select>
                    </div>            
                    <br/>
                    <span>
                        Position&nbsp;
                        <numeric type="float" data-event-submit="modify_stencil(stencil.stencil_id)" data-value="stencil.position.x"/>
                        <numeric type="float" data-event-submit="modify_stencil(stencil.stencil_id)" data-value="stencil.position.y"/>
                        <numeric type="float" data-event-submit="modify_stencil(stencil.stencil_id)" data-value="stencil.position.z"/>
                    </span>
                    <br/>
                    <span>
                        Rotation&nbsp;
                        <numeric type="float" data-event-submit="modify_stencil(stencil.stencil_id)" data-value="stencil.angles.x"/>
                        <numeric type="float" data-event-submit="modify_stencil(stencil.stencil_id)" data-value="stencil.angles.y"/>
                        <numeric type="float" data-event-submit="modify_stencil(stencil.stencil_id)" data-value="stencil.angles.z"/>
                    </span>
                    <br/>
                    <span>
                        Size&nbsp;
                        <numeric type="float" data-event-submit="modify_stencil(stencil.stencil_id)" data-value="stencil.size.x"/>
                        <numeric type="float" data-event-submit="modify_stencil(stencil.stencil_id)" data-value="stencil.size.y"/>
                    </span>
                    <br/> 
                    <label><input type="checkbox" name="double_sided" data-event-change="modify_stencil(stencil.stencil_id)" data-value="stencil.double_sided" /> Double Sided </label>
                    <label><input type="checkbox" name="disabled" data-event-change="modify_stencil(stencil.stencil_id)" data-value="stencil.disabled" /> Disabled </label>
                    <button data-event-click="delete_stencil(stencil.stencil_id)">Delete</button>
				</div>
			</div>
            <div>
                <button data-event-click="add_stencil()">Add Quad Stencil</button>
            </div>            
        </panel>
    </body>
</rml>